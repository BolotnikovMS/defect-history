<div class="notification-wrapper">
  {{--  {{ inspect(flashMessages.all()) }}  --}}
  @if(flashMessages.has('successMessage'))
    <div class="notification notification-success active">
      <div class="notification__text">
        {{ flashMessages.get('successMessage') }}
      </div>
      <button class="notification__btn notification__btn-success notification__btn-close">
        @!icons.close({
          optionalClasses: 'icon-size_15'
        })
      </button>
    </div>
  @elseif(flashMessages.has('dangerMessage'))
    <div class="notification notification-danger active">
      <div class="notification__text">
        {{ flashMessages.get('dangerMessage') }}
      </div>
      <button class="notification__btn notification__btn-danger notification__btn-close">
        @!icons.close({
          optionalClasses: 'icon-size_15'
        })
      </button>
    </div>
  @endif
</div>
